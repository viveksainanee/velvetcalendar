
<h1><font color="#FFFFFF">Events</font></h1>

<div class="row">
	<div class="span6">
 <font color='black'>.</font>

<div class="transbox">
<div class="well" style="background-color:#FFFFFF">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Description</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.title, event_path(event) %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.description %></td>
        <td><%= event.status %></td>
        <td>
          <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', event_path(event), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
	  <a href= <%= event.add_to_button %>><img src="https://www.govevents.com/image/add-to-calendar-button.gif" border=0></a>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_event_path, :class => 'btn btn-primary' %>

</div></div>
</div><p>

