%nav.top-bar
  %ul.title-area
    %li.name
      %h1= link_to 'enteract', root_path
    %li.toggle-topbar.menu-icon
      %a{href: '#'}
        %span
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.has-dropdown
          %a{href: '#'} Polls
          %ul.dropdown
            %li= link_to('New', new_poll_path)
        %li.has-dropdown
          %a{href: '#'} Groups
          %ul.dropdown
            %li= link_to('List', groups_path)
            %li= link_to('New',  new_group_path)
        %li= link_to('Invite',   new_user_invitation_path)
        %li= link_to('Profile',  edit_user_registration_path)
        %li= link_to('Sign Out', destroy_user_session_path, method: :delete)
      - else
        %li= link_to('Register', new_user_registration_path)
        %li= link_to('Sign In', new_user_session_path)

